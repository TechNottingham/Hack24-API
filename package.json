{
  "name": "hack24-api",
  "description": "Hack24 Application",
  "version": "0.1.1",
  "private": true,
  "main": "bin/server.js",
  "scripts": {
    "typings": "cd src && typings i",
    "clean": "rimraf build",
    "lint": "tslint -c src/tslint.json -e \"src/**/*.d.ts\" \"src/**/*.ts\"",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc -p src/",
    "start": "node bin/server.js",
    "test": "mocha --timeout 5000 -R dot --require source-map-support/register --recursive build",
    "heroku-postbuild": "npm run build && npm prune"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "mongoose": "^4.6.1",
    "morgan": "^1.7.0",
    "pusher": "^1.5.0",
    "slug": "^0.9.1",
    "source-map-support": "^0.4.2",
    "typescript": "^2.0.3",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "mocha": "^3.0.2",
    "mongodb": "^2.2.10",
    "promisify-supertest": "^1.0.0",
    "source-map-support": "^0.4.0",
    "supertest": "^2.0.0",
    "typings": "^1.4.0",
    "tslint": "^3.15.1"
  }
}
