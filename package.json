{
  "name": "hack24-api",
  "description": "Hack24 Application",
  "version": "0.1.1",
  "private": true,
  "main": "bin/server.js",
  "scripts": {
    "clean": "rimraf build",
    "lint": "tslint -c src/tslint.json -e \"src/**/*.d.ts\" \"src/**/*.ts\"",
    "prebuild": "npm run lint && npm run clean",
    "build": "tsc -p src/",
    "start": "node bin/server.js",
    "test": "mocha --timeout 5000 -R dot --require source-map-support/register --recursive build",
    "heroku-postbuild": "npm run build && npm prune",
    "db": "docker-compose up -d",
    "db-stop": "docker-compose down"
  },
  "dependencies": {
    "@slack/client": "^3.8.1",
    "body-parser": "^1.16.1",
    "express": "^4.14.1",
    "mongoose": "^4.8.4",
    "morgan": "^1.8.1",
    "pusher": "^1.5.1",
    "rimraf": "^2.5.4",
    "slug": "^0.9.1",
    "source-map-support": "^0.4.11",
    "typescript": "^2.2.1",
    "tslint": "^4.4.2",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.34",
    "@types/express": "^4.0.35",
    "@types/mime": "0.0.29",
    "@types/mocha": "^2.2.39",
    "@types/mongodb": "^2.1.41",
    "@types/mongoose": "^4.7.6",
    "@types/morgan": "^1.7.32",
    "@types/serve-static": "^1.7.31",
    "@types/superagent": "^2.0.36",
    "@types/supertest": "^2.0.0",
    "@types/winston": "^2.2.0",
    "mocha": "^3.0.2",
    "mongodb": "^2.2.10",
    "promisify-supertest": "^1.0.0"
    "source-map-support": "^0.4.0",
    "supertest": "^3.0.0"
  }
}
